                                    activeSubmit = false;
                                    $("#accountLabel_ErrorMsg").html("請選擇分公司");
                                    $("#accountIBb").focus();
                                    LoginDoing(true);
                                    return;
                                }
                                var accountID = $.trim($("#accountID").val());
                                if (accountID == "") {
                                    activeSubmit = false;
                                    $("#accountLabel_ErrorMsg").html("請輸入帳號");
                                    $("#accountID").focus();
                                    LoginDoing(true);
                                    return;
                                }
                                else {
                                    if (accountID.length <= 7) {
                                        accountID = PadLeft(accountID, 7, '0');
                                        $("#accountID").val(accountID);
                                    }
                                    else {
                                        activeSubmit = false;
                                        $("#accountLabel_ErrorMsg").html("帳號長度錯誤");
                                        $("#accountID").focus();
                                        LoginDoing(true);
                                        return;
                                    }
                                }
                                var accountPassword = $.trim($("#accountPassword").val());
                                if (accountPassword == "") {
                                    activeSubmit = false;
                                    $("#accountLabel_ErrorMsg").html("請輸入密碼");
                                    $("#accountPassword").focus();
                                    LoginDoing(true);
                                    return;
                                }
                                RecordCookies('RecordA');
                                break;
                            case '2':
