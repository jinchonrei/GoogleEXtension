        }
        /* --- 清除CA的記錄 --- */
        function ClearCACookie() {
            delCookie('CAPath');
            delCookie('CAName');
            delCookie('CAPassword');
        }
        function ChangeLoginMode(CheckName) {
            var Check = document.getElementById(CheckName);
            Check.checked = true;
            if (CheckName == 'accountLogin') { Tab = "AccountTable"; }
            else { Tab = "IDTable"; }
            var TabA = document.getElementById("TabA");
            var IDTable = document.getElementById("IDTable");
            var AccountTable = document.getElementById("AccountTable");
            var loginflag = document.getElementById("loginFlag");
            switch (Tab) {
                case "AccountTable":
                    IDTable.style.visibility = 'hidden';
                    AccountTable.style.visibility = 'visible';
                    loginflag.value = '1';
                    break;
                case "IDTable":
                    IDTable.style.visibility = 'visible';
                    AccountTable.style.visibility = 'hidden';
                    loginflag.value = '2';
                    break;
            }
        }
        function LoadCookies() {
            //帳號登入
            var checkedA = getCookie('RecordA');
            if ((checkedA == null) | (checkedA == undefined)) { }
            else {
                var cval = checkedA.split(",");
                if (cval.length == 3) {
                    if (cval[0] == 'true') {
                        var Checked = cval[0];
                        var BHNO = $.trim(cval[1]);
                        var Account = cval[2];
                        if (Account == undefined) { Account = ''; }
                        if ((BHNO == '') | (BHNO == undefined) | (BHNO == null)) { }
                        else {
                            if ((Account == '') | (Account == undefined) | (Account == null)) { }
                            else {
                                ChangeLoginMode('accountLogin');
                                var accountIBb = document.getElementById('accountIBb');
                                if (accountIBb == undefined) { }
                                else {
                                    for (var i = 0; i < accountIBb.options.length; i++) {
                                        var SelectedBHNO = $.trim(accountIBb.options[i].value);
                                        if (SelectedBHNO == BHNO) {
                                            accountIBb.selectedIndex = i;
                                            break;
                                        }
                                    }
                                }
                                $("#accountID").val(Account);
                                $("#RecordA").prop("checked", true);
                                $("#accountPassword").focus();
                            }
                        }
                    }
                }
            }
            //身分證登入
            var checkedB = getCookie('RecordB');
            if ((checkedB == null) | (checkedB == undefined)) { }
            else {
                var cval = checkedB.split(",");
                if (cval.length == 2) {
                    if (cval[0] == 'true') {
                        if ((cval[1] == '') | (cval[1] == undefined) | (cval[1] == null)) { }
                        else {
                            ChangeLoginMode('idLogin');
                            $("#RecordB").prop("checked", true);
                            $("#txtUserID").val(cval[1]);
                            $("#queryibs").click();
                            $("#idPassword").focus();
                        } 
                    }
                }
            }
            //登入方式
            var IDTable = document.getElementById("IDTable");
            var AccountTable = document.getElementById("AccountTable");
            var loginflag = document.getElementById("loginFlag");
            var LoginType = getCookie('LoginType');
            switch (LoginType) {
                case 'ACID':
                    $("#accountLogin").attr("checked", true);
                    IDTable.style.visibility = 'hidden';
                    AccountTable.style.visibility = 'visible';
                    loginflag.value = '1';
                    break;
                case 'USID':
                    $("#idLogin").attr("checked", true);
                    IDTable.style.visibility = 'visible';
                    AccountTable.style.visibility = 'hidden';
                    loginflag.value = '2';
                    break;
            }
        }
        function chageRecord(thisCheck) {
            var chk = document.getElementById(thisCheck);
            chk.checked = chk.checked ? false : true;
        }
        function RecordLoginType() {
            var LoginType = $("[name='Acc']:checked").val();
            setCookie('LoginType', LoginType);
        }
        function RecordCookies(thisCheck) {
            var chk = document.getElementById(thisCheck);
            var CookieValue = chk.checked + ',';
            RecordLoginType();
            switch (thisCheck) {
                case 'RecordA':
                    var accountIBb = document.getElementById('accountIBb');
                    var BHNO = accountIBb.options[accountIBb.selectedIndex].value;
                    var accountID = document.getElementById('accountID');
                    if ((chk.checked == 'true') | (chk.checked == true)) {
                        CookieValue += BHNO + "," + accountID.value;
                    } else {
                        delCookie(thisCheck);
                    }
                    break;
                case 'RecordB':
                    if ((chk.checked == 'true') | (chk.checked == true)) {
                        var txtUserID = document.getElementById('txtUserID');
                        CookieValue += txtUserID.value;
                    } else {
                        delCookie(thisCheck);
                    }
                    break;
            }
            setCookie(thisCheck, CookieValue);
            return true;
        }
        function LoginDoing(State) {
            if (State) {
                $("#accountimgSubmit").show();
                $("#accountimgSubmitLoging").hide();
                $("#imgSubmit").show();
                $("#imgSubmitLoging").hide();
                $("#btnAdd").attr("disabled", false);
            } else {
                $("#accountimgSubmit").hide();
                $("#accountimgSubmitLoging").show();
                $("#imgSubmit").hide();
                $("#imgSubmitLoging").show();
            }
        }
        function AutoLogin() {
            var BHNO = '@BHNO';
            var ACNO = '@ACNO';
            var APWD = '@APWD';
            if ((BHNO == '') | (ACNO == '') | (APWD == '')) { }
            else {
                var accountIBb = document.getElementById("accountIBb");
                if ((accountIBb == undefined) | (accountIBb == null)) { }
                else {
                    for (var i = 0; i < accountIBb.options.length; i++) {
                        var SelectedBHNO = $.trim(accountIBb.options[i].value);
                        if (SelectedBHNO == BHNO) {
                            accountIBb.selectedIndex = i;
                            break;
                        }
                    }
                    $("#accountID").val(ACNO);
                    $("#accountPassword").val(APWD);
                    $("#accountimgSubmit").click();
                }
            }
        }
