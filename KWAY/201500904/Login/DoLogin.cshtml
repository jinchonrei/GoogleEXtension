                                if (count > 0) {
                                    accountIBaSelect.options[accountIBaSelect.selectedIndex].text = "請按查詢";
                                    if (accountIBaSelect.options.length == 2)
                                    { accountIBaSelect.selectedIndex = 1; }
                                    var txtPassword = document.getElementById("txtPassword");
