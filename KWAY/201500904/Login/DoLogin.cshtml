                $("#queryibs").click(
                    function () {
                        if (queryibsBusy) return;
                        queryibsBusy = true;
                        $("#queryibs").attr("disabled", true);
                        var userID = $.trim($("#txtUserID").val());
                        if (userID == "") {
                            $("#Label_ErrorMsg").html("請輸入身分證字號");
                            queryibsBusy = false;
                            $("#queryibs").attr("disabled", false);
                            return;
